{% extends 'base.html.twig' %}

{% block title %}Forgot password -
{% endblock %}

{% block body %}

  <div class="container" id="content">
    {% for message in app.flashes('notice') %}
      <div class="row">
        <div class="col-md-6 offset-md-3 ">
          <div class="alert alert-danger">
            {{ message }}
          </div>
        </div>
      </div>
    {% endfor %}
    <div class="row">
      <div class="col-md-6 offset-md-3 forms">
        <h2>Forgot Password</h2>
        <div class="form">
          {{ form_start(form) }}
          <div class="form-row">
            <div class="form-group col-md-6 offset-md-3 col-10 offset-1">
              {{ form_label(form.username, 'Username') }}
              {{ form_widget(form.username) }}
            </div>
            {{ form_rest(form) }}
            <div class="form-group col-md-6 offset-md-3 col-10 offset-1">
              <input type="submit" class="form-control btn btn-primary" value="Ask for reset password">
            </div>
          </div>
          {{ form_end(form) }}
        </div>
      </div>
    </div>
  </div>
{% endblock %}